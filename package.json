{
  "name": "rld-maptool",
  "version": "0.5.1",
  "main": "index.js",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"ng serve\" \"npm run electron\"",
    "electron-build": "ng build --base-href && electron dist",
    "electron": "electron ./src/electron/electron.dev",
    "build": "ng build && node scripts/bundle.js",
    "build-windows": "npm run build && cross-var electron-packager dist/rld-maptool maptool-$npm_package_version --out=build --platform=win32 --arch=all --overwrite",
    "build-linux": "npm run build && cross-var electron-packager dist/rld-maptool maptool-$npm_package_version --out=build --platform=linux --arch=all --overwrite",
    "deploy-windows": "npm run build-windows && node scripts/deploy.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^11.0.5",
    "@angular/common": "^11.0.5",
    "@angular/compiler": "^11.0.5",
    "@angular/core": "^11.0.5",
    "@angular/forms": "^11.0.5",
    "@angular/platform-browser": "^11.0.5",
    "@angular/platform-browser-dynamic": "^11.0.5",
    "core-js": "^3.8.1",
    "electron": "^11.1.1",
    "hammerjs": "^2.0.8",
    "install": "^0.13.0",
    "ngx-socket-io": "^3.2.0",
    "npm": "^7.11.2",
    "rxjs": "^6.6.3",
    "rxjs-compat": "^6.6.3",
    "tslib": "^1.14.1",
    "uuid": "^8.3.2",
    "zone.js": "^0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1100.5",
    "@angular/cli": "^11.2.11",
    "@angular/compiler-cli": "^11.0.5",
    "@angular/language-service": "^11.0.5",
    "@types/hammerjs": "^2.0.36",
    "@types/node": "^14.0.27",
    "@types/uuid": "^8.3.0",
    "archiver": "^4.0.2",
    "concurrently": "^5.3.0",
    "cross-var": "^1.1.0",
    "electron-packager": "^15.2.0",
    "ts-node": "~8.10.2",
    "tslint": "^6.1.3",
    "typescript": "~4.0.0"
  }
}
